/* pages/index/searchlist.wxss */
.top-area{
  width:100%;
  padding-bottom: 20rpx;

}
.top-area .search-area{
  height:70rpx;
  width:95%;
  background-color:#fff;
  padding-left:120rpx;
  position: relative;
  border-radius: 30rpx;
}
.top-area .search-icon{
  width:120rpx;
  position:absolute;
  top:10rpx;
  left:0;
  border-right: 1px solid #ddd;
  height:50rpx;
  padding:5rpx 0;
}
.top-area .search-img{
  width:40rpx;
  height:40rpx;
  margin:auto;
  display: block;

}
.top-area .search-input{
  text-align: center;
  height:100%;
  font-size:24rpx;
}
/* 酒品列表 */
.wine-item{
  position:relative;
  padding:30rpx 2.5% 30rpx 240rpx;
  height:262rpx;
}
.img-area{
  position:absolute;
  width:200rpx;
  height:200rpx;
  top:0;
  bottom:0;
  margin:auto;
  left:20rpx;
}
.wine-img{
  height:100%;
  border:1px solid #ddd;
  border-radius:5rpx;
}
.wine-title{
  height:80rpx;
  line-height:40rpx;
  margin-bottom:5rpx;
}
.wine-style{
  margin-bottom:20rpx;
  color:#aaa;
}
.item-tx{
  height:30rpx;
  line-height:30rpx;
}
.mall-price{
  margin-bottom:5rpx;
}