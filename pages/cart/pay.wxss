/* pages/cart/pay.wxss */
page{
  background:#efefef;
}
/* 酒品列表 */
.wine-item{
  position:relative;
  border-bottom:1px solid #ddd;
  padding:20rpx 2.5% 20rpx 240rpx;
  height:242rpx;
}
.img-area{
  position:absolute;
  width:200rpx;
  height:200rpx;
  top:0;
  bottom:0;
  margin:auto;
  left:20rpx;
}
.wine-img{
  height:100%;
  border:1px solid #ddd;
  border-radius:5rpx;
}
.wine-title{
  height:80rpx;
  line-height:40rpx;
  margin-bottom:5rpx;
}
.wine-style{
  margin-bottom:20rpx;
  color:#aaa;
}
.item-tx{
  height:30rpx;
  line-height:30rpx;
}
.mall-price{
  margin-bottom:5rpx;
}
.num-area{
  height:30rpx;
  line-height:30rpx;
  width:80rpx;
  bottom:20rpx;
  right:2.5%;
  color: #666;
  text-align:right;
  position: absolute;
  
}
.wine-item:last-child{
  border:none;
}
/* 订单 */
.order-item{
  position: relative;
  padding:30rpx 2.5% 30rpx 200rpx;
  border-bottom: 1px solid #ddd;
  line-height:40rpx;
  min-height:102rpx;
}
.order-item:last-child{
  border-bottom: none;
}
.item-name{
  position:absolute;
  left:2.5%;
  width:150rpx;
  font-weight:700;
}
.item-dec{
  text-align:right;
}
.address-title-item{
  float:right;

}
.address-info{
  color:#666;
  font-size:24rpx;
}

/* 底部导航 */
.nav-info{
width:300rpx;
  float:left;
  height:100rpx;
  background:#fff;
}
.go-pay{
  width:400rpx;
  float:right;
  height:100rpx;
  text-align:center;
  color:#fff;
  font-size:32rpx;
}
.pay-icon{
  width:40rpx;
  height:40rpx;
  display: inline-block;
  position: relative;
  bottom: -8rpx;
}
.nav-text-total{
  margin-top:20rpx;
  line-height:40rpx;
  font-size:28rpx;
  color:#333;
}
.nav-text{
  line-height:40rpx;
  font-size:24rpx;
  color:#b3a905;
}






