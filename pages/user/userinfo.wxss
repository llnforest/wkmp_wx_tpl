/* pages/user/userinfo.wxss */
.order-item{
  position: relative;
  padding:30rpx 2.5% 30rpx 200rpx;
  border-bottom: 1px solid #e3eaef;
  box-shadow: 0 1px 2px 0 rgba(101,129,156,.08);
  line-height:40rpx;
  min-height:102rpx;
}

.item-name{
  position:absolute;
  left:2.5%;
  width:150rpx;
  font-weight:700;
  height:25rpx;
  line-height:40rpx;
}
.item-dec{
  text-align:right;
  line-height:40rpx;
}
.head-img{
  width:80rpx;
  height:80rpx;
  border-radius:50%;
  position:absolute;
  right:2.5%;
  top:0;
  bottom:0;
  margin:auto;
}